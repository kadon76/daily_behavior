<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
		<% if current_user?(@user) %>
			<section>
				<p><%= link_to "Create new student", new_student_path %></p>
			</section>
			<section>
				<% if current_user.admin? %>
					<h2>Admin Tools</h2>
					<p><%= link_to "View Prospects", prospects_path %></p>
					<p><%= link_to "Create New User", new_user_path %></p>
				<% end %>
			</section>
		<% end %>
	</aside>
	<div class="span8">
		<% if @user.students.any? %>
      		<h3>Students (<%= @user.students.count %>)</h3>
      		<ol class="students">
        		<%= render @students %>
      		</ol>
      		<%= will_paginate @students %>
    	<% end %>
	</div>
</div>
